<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %> (Whole numbers only)
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, ['Consoles', 'Games', 'Controllers', 'Bundles' ,'Miscellaneous'],
    include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :console_compatibility %>
    <% console_options = [['Sony',['Playstation 5', 'Playstation 4', 'Playstation 3', 'Playstation 2', 'Playstation']], 
    ['Microsoft', ['Xbox Series X', 'Xbox Series S', 'Xbox One', 'Xbox 360', 'Xbox'] ],
    ['Nintendo', ['Switch', 'Wii U', 'Wii', 'GameCube', '64'] ],
    ['Other', ['PC', 'Other'] ] ] %>
    <%= form.select :console_compatibility, grouped_options_for_select(console_options, nil), include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :functional_condition %> (1-3)
    <%= form.select :functional_condition, [ 
      ['1: Not functional; for parts or repair', 1], 
      ['2: Works the majority of the time with some bugs/errors', 2], 
      ['3: Works flawlessly', 3] ],
      include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :cosmetic_condition %> (1-3)
        <%= form.select :cosmetic_condition, [ 
      ['1: Heavy damage / scratching', 1], 
      ['2: Some visible damage / scratching', 2], 
      ['3: No scratches or damage', 3] ],
      include_blank: true %>
  </div>
  
  <div class="field">
    <%= form.hidden_field :user_id, value: current_user.id%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image, accept: 'image/jpg, image/jpeg, image/png' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Listing', class: 'btn btn-primary' %>
  </div>
<% end %>


