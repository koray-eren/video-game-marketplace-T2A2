<p id="notice"><%= notice %></p>

<h1>
  <%= @listing.name %>
</h1>

<%= image_tag @listing.image %>

<p>
  <strong>Price:</strong>
  $<%= @listing.price %>
</p>

<p>
  <strong>Category:</strong>
  <%= @listing.category %>
</p>

<p>
  <strong>Console compatibility:</strong>
  <%= @listing.console_compatibility %>
</p>

<p>
  <strong>Functional condition:</strong>
  <%= @listing.functional_condition %> / 3 :
  <% if @listing.functional_condition == 1 %>
  <%= 'Not functional; for parts or repair' %>
  <% elsif @listing.functional_condition == 2 %>
  <%= 'Works the majority of the time with some bugs/errors' %>
  <% elsif @listing.functional_condition == 3 %>
  <%= 'Works flawlessly'%>
  <% end %>
</p>

<p>
  <strong>Cosmetic condition:</strong>
  <%= @listing.cosmetic_condition %> / 3 :
  <% if @listing.cosmetic_condition == 1 %>
  <%= 'Heavy damage / scratching' %>
  <% elsif @listing.cosmetic_condition == 2 %>
  <%= 'Some visible damage / scratching' %>
  <% elsif @listing.cosmetic_condition == 3 %>
  <%= 'No scratches or damage'%>
  <% end %>

</p>

<p>
    <strong>Item Location: </strong>
    <%= @listing.user.suburb %>,
    <%= @listing.user.state%>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<%= link_to 'Back', listings_path, class: 'btn btn-primary' %>
<% if user_signed_in? && @listing.user == current_user %>
  <%= link_to 'Edit', edit_listing_path(@listing), class: 'btn btn-warning' %>
  <%= link_to 'Delete', listing_path(@listing), method: :delete, class: 'btn btn-danger', :data => {:confirm => 'Are you sure?'} %>
<% else %>
  <%= link_to 'Purchase', purchase_listing_path(@listing), class: 'btn btn-success' %>
<% end %>